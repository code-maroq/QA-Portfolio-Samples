{
	"info": {
		"_postman_id": "4f0f76da-0bb6-45e9-8d4f-606289fbdcb5",
		"name": "TMDB API Tests",
		"description": "Professional API Test Collection for Portfolio",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
